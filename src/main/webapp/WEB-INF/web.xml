<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>SyncServlet</servlet-name>
        <servlet-class>com.rakutec.weibo.SyncServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
        <init-param>
            <param-name>latestId</param-name>
            <param-value>79295167244402688</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>SyncServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <context-param>
        <param-name>contextInitializerClasses</param-name>
        <param-value>org.cloudfoundry.services.CloudApplicationContextInitializer</param-value>
    </context-param>

</web-app>
